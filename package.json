{
    "name": "permafrost-dev/hackernews-graphql",
    "private": true,
    "scripts": {
        "start": "npm run build:dev && node dist/index.js",
        "test": "./node_modules/.bin/jest tests --verbose",
        "test:coverage": "./node_modules/.bin/jest tests --coverage",
        "fmt": "./node_modules/.bin/prettier --config .prettierrc --write 'src/**/*.{js,ts,json,yml,yaml}' 'tests/**/*.{js,ts,json,yml,yaml}' './*.{js,yml,yaml}'",
        "lint": "./node_modules/.bin/eslint --ext ts,js src/",
        "lint:fix": "./node_modules/.bin/eslint --ext ts,js --fix src/",
        "lint:staged": "./node_modules/.bin/lint-staged",
        "fix": "npm run fmt && npm run lint:fix",
        "build:dev": "./node_modules/.bin/esbuild --platform=node --target=node14 --format=cjs --bundle --tsconfig=./tsconfig.json --outdir=dist src/index.js",
        "prepare": "husky install"
    },
    "main": "index.js",
    "lint-staged": {
        "*.{js,ts}": [
            "./node_modules/.bin/prettier --config .prettierrc --write",
            "./node_modules/.bin/eslint --ext ts,js --fix"
        ],
        "*.{json,yaml,yml}": [
            "./node_modules/.bin/prettier --config .prettierrc --write"
        ]
    },
    "dependencies": {
        "@tinyhttp/app": "^1.3.7",
        "apollo-server-express": "^2.25.0",
        "axios": "^0.21.1",
        "body-parser": "^1.19.0",
        "express-graphql": "^0.12.0",
        "graphql": "^15.5.0",
        "lodash": "^4.17.21"
    },
    "devDependencies": {
        "@types/jest": "^26.0.20",
        "@types/node": "^15.0.1",
        "@typescript-eslint/eslint-plugin": "^4.9.1",
        "@typescript-eslint/parser": "^4.9.1",
        "esbuild": "^0.12.0",
        "eslint": "^7.15.0",
        "eslint-config-prettier": "^8.1.0",
        "eslint-plugin-prettier": "^3.2.0",
        "husky": "^6.0.0",
        "jest": "^27.0.0",
        "lint-staged": "^11.0.0",
        "prettier": "^2.2.1",
        "ts-jest": "^27.0.0",
        "typescript": "^4.3"
    }
}
